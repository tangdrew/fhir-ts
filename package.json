{
  "name": "fhir-ts",
  "version": "1.0.0",
  "description": "FHIR Typescript definitions generator",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "fhir"
  ],
  "author": "Andrew Tang <andrew.yishiou.tang@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^5.0.35",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.3",
    "jest": "^23.6.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "clime": "^0.5.9",
    "glob": "^7.1.3",
    "ts-simple-ast": "^14.4.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "lib/**/*.{ts,tsx,js,json}"
    ]
  }
}
